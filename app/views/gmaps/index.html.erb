<h1>Listing gmaps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Gmaps</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gmaps.each do |gmap| %>
      <tr>
        <td><%= gmap.name %></td>
        <td><%= gmap.address %></td>
        <td><%= gmap.longitude %></td>
        <td><%= gmap.latitude %></td>
        <td><%= gmap.gmaps %></td>
        <td><%= link_to 'Show', gmap %></td>
        <td><%= link_to 'Edit', edit_gmap_path(gmap) %></td>
        <td><%= link_to 'Destroy', gmap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gmap', new_gmap_path %>
<%= gmaps4rails(@json) %>
